        android:padding="0dp">

        <ProgressBar
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/color_F03974"
            android:visibility="visible" />


    </RelativeLayout>

</RelativeLayout>